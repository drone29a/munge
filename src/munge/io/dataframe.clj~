(ns munge.io.dataframe)


(defn write-data-frame [w headers records]
  (.write w (format "%s\n" (str/join " " headers)))
  (doseq [r records]
    (.write w (format "%s\n" (str/join " " r)))))

(defn save-data-frame [path headers records]
  (with-open [w (io/writer path)]
    (write-data-frame w headers records)))
